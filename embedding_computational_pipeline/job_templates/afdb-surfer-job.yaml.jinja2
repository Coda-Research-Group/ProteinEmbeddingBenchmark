apiVersion: batch/v1
kind: Job
metadata:
  name: afdb-surfer-{{ job_iterator }}
spec:
  template:
    spec:
      ttlSecondsAfterFinished: 60
      containers:
      - name: afdb-surfer-{{ job_iterator }}
        image: registry.gitlab.ics.muni.cz:443/fi-lmi/protein-db:surfer
        imagePullPolicy: Always
        securityContext:
          allowPrivilegeEscalation: false
          capabilities:
            drop:
              - ALL
          runAsUser: 1000
        command:
          - python3
        args:
          - /scripts/3d-af-surfer/afdb2surfer.py
          - --input
          - /proteins/alphafold
          - --output
          - /output/afdb-surfer-embedding
          - --processes
          - '4'         
          - --scratch_dir
          - /tmp
          - --position
          - "{{ job_iterator }}"
          - --index
          - "/output/configs/job-cif2emb-{{ job_iterator }}"
        volumeMounts:
          - name: vol-1
            mountPath: /proteins
          - name: embeddings
            mountPath: /output
        resources:
          limits:
            cpu: '5'
            ephemeral-storage: 32Gi
            memory: 8Gi
          requests:
            cpu: '4'
            ephemeral-storage: 32Gi
            memory: 4Gi
      imagePullSecrets:
        - name: gitlab-containerregistry-starterpack
      securityContext:
        fsGroupChangePolicy: OnRootMismatch
        runAsNonRoot: true
        seccompProfile:
          type: RuntimeDefault
      volumes:
        - name: vol-1
          persistentVolumeClaim:
            claimName: pvc-lmi-data-storage-secret
        - name: embeddings 
          persistentVolumeClaim:
            claimName: pvc-embeddings
        - name: script-volume
          configMap:
            name: cif2embedding-script
      restartPolicy: Never
